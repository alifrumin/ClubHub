<%= form_for [@club, @meeting] do |f| %>

  <%= f.label :title %>
	<%= f.text_field :title %>

  <%= f.label :datetime %>
	<%= f.date_field :datetime, class: 'field' %>

  <%= f.label :location %>
	<%= f.text_field :location %>

  <%= f.label :theme %>
  <%= f.text_field :theme %>

  <%= f.label :details %>
  <%= f.text_area :details, size: "60x12" %>

  <%= f.label :host %>
  <%= options_from_collection_for_select(@club.members.all, :user_id, :email) %>

  <%= f.label :invited %>
  <%= f.text_field :invited %>

  <%= f.label :attending %>
  <%= f.text_field :attending %>

  <%= f.label :meeting_image %>
  <%= f.text_field :meeting_image %>


	<%= f.submit 'Submit', class: 'enter' %>

<% end %>
